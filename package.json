{
  "name": "goto-sms-sender",
  "version": "1.0.0",
  "description": "A modern, containerized web application for sending SMS messages through GoTo Connect's API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:refactored": "node app-refactored.js",
    "dev": "nodemon app.js",
    "dev:refactored": "nodemon app-refactored.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:restart": "docker compose restart app",
    "install:quick": "cp env.example .env && echo 'Please edit .env with your credentials'"
  },
  "keywords": [
    "goto-connect",
    "sms",
    "messaging",
    "oauth",
    "docker",
    "nodejs",
    "express",
    "redis"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oneofthegeeks/goto-sms-sender.git"
  },
  "bugs": {
    "url": "https://github.com/oneofthegeeks/goto-sms-sender/issues"
  },
  "homepage": "https://github.com/oneofthegeeks/goto-sms-sender#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "redis": "^4.6.6",
    "simple-oauth2": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}